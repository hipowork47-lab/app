{
  "appId": "com.pos.desktop",
  "productName": "ZentroPOS",
  "directories": {
    "output": "release",
    "buildResources": "desktop"
  },
  "files": [
    "dist/**/*",
    "desktop/main.js",
    "package.json"
  ],
  "win": {
    "target": ["nsis", "portable"]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "mac": {
    "target": ["dmg"]
  },
  "linux": {
    "target": ["AppImage"]
  }
}
